# 개발 환경 설정 예시
# 이 파일을 .env로 복사하고 실제 값을 입력하세요
# cp config/development.env.example .env

# ===== 환경 설정 =====
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ===== 데이터베이스 (PostgreSQL) =====
DATABASE_URL=postgresql://reelmaker:reelmaker123@localhost:5432/reelmaker_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ===== Redis =====
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ===== JWT 인증 =====
# 아래 명령어로 생성: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== OpenAI API (필수) =====
# https://platform.openai.com/api-keys 에서 발급
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ===== ElevenLabs TTS API (필수) =====
# https://elevenlabs.io/app/settings/api-keys 에서 발급
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ===== Unsplash API (필수) =====
# https://unsplash.com/oauth/applications 에서 발급
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
UNSPLASH_SECRET_KEY=your-unsplash-secret-key-here

# ===== Pexels API (필수) =====
# https://www.pexels.com/api/ 에서 발급
PEXELS_API_KEY=your-pexels-api-key-here

# ===== AWS S3 (선택, 로컬 개발 시 불필요) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=reelmaker-videos-dev
AWS_CLOUDFRONT_DOMAIN=

# ===== Celery 작업 큐 =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Asia/Seoul

# ===== 영상 설정 =====
VIDEO_OUTPUT_WIDTH=1080
VIDEO_OUTPUT_HEIGHT=1920
VIDEO_FPS=30
VIDEO_BITRATE=5000k
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
AUDIO_BITRATE=128k

# ===== 파일 경로 =====
TEMP_DIR=./temp
OUTPUT_DIR=./output
MEDIA_CACHE_DIR=./media_cache

# ===== Rate Limiting =====
RATE_LIMIT_PER_HOUR=60
RATE_LIMIT_PER_DAY=100

# ===== 로깅 =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== Sentry (선택, 에러 추적) =====
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===== Stripe (선택, 유료 기능용) =====
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===== CORS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# ===== 기능 플래그 =====
FEATURE_BATCH_PROCESSING=False
FEATURE_AI_IMAGE_GENERATION=False
FEATURE_INSTAGRAM_AUTO_UPLOAD=False

