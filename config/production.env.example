# 프로덕션 환경 설정 예시
# 절대 Git에 커밋하지 마세요!

# ===== 환경 설정 =====
ENVIRONMENT=production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ===== 데이터베이스 (PostgreSQL - RDS) =====
DATABASE_URL=postgresql://user:password@rds-endpoint:5432/reelmaker_prod
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=20

# ===== Redis (ElastiCache) =====
REDIS_URL=redis://elasticache-endpoint:6379/0
REDIS_MAX_CONNECTIONS=100

# ===== JWT 인증 =====
JWT_SECRET_KEY=STRONG_RANDOM_SECRET_KEY_FOR_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== OpenAI API =====
OPENAI_API_KEY=sk-prod-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ===== ElevenLabs TTS API =====
ELEVENLABS_API_KEY=prod-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ===== Unsplash API =====
UNSPLASH_ACCESS_KEY=prod-unsplash-access-key
UNSPLASH_SECRET_KEY=prod-unsplash-secret-key

# ===== Pexels API =====
PEXELS_API_KEY=prod-pexels-api-key

# ===== AWS S3 =====
AWS_ACCESS_KEY_ID=prod-aws-access-key-id
AWS_SECRET_ACCESS_KEY=prod-aws-secret-access-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=reelmaker-videos-prod
AWS_CLOUDFRONT_DOMAIN=cdn.reelmaker.ai

# ===== Celery =====
CELERY_BROKER_URL=redis://elasticache-endpoint:6379/0
CELERY_RESULT_BACKEND=redis://elasticache-endpoint:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Asia/Seoul

# ===== 영상 설정 =====
VIDEO_OUTPUT_WIDTH=1080
VIDEO_OUTPUT_HEIGHT=1920
VIDEO_FPS=30
VIDEO_BITRATE=5000k
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
AUDIO_BITRATE=128k

# ===== 파일 경로 =====
TEMP_DIR=/tmp/reelmaker
OUTPUT_DIR=/var/reelmaker/output
MEDIA_CACHE_DIR=/var/reelmaker/cache

# ===== Rate Limiting =====
RATE_LIMIT_PER_HOUR=300
RATE_LIMIT_PER_DAY=1000

# ===== 로깅 =====
LOG_LEVEL=WARNING
LOG_FORMAT=json

# ===== Sentry =====
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===== Stripe =====
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===== CORS =====
CORS_ORIGINS=https://reelmaker.ai,https://app.reelmaker.ai
CORS_ALLOW_CREDENTIALS=True

# ===== 기능 플래그 =====
FEATURE_BATCH_PROCESSING=True
FEATURE_AI_IMAGE_GENERATION=True
FEATURE_INSTAGRAM_AUTO_UPLOAD=True

